data:
  build: data

db:
  image: mysql:5.6
  volumes_from:
    - data
  volumes:
    - /home/user/dockerfiles/etc/mysql/conf.d:/etc/mysql/conf.d
  environment:
    - MYSQL_ROOT_PASSWORD=secret
    - MYSQL_USER=user
    - MYSQL_PASSWORD=password
    - MYSQL_DATABASE=db

wp:
  image: wordpress
  ports:
    - "80:80"
  links:
    - db:mysql
  volumes:
    - /home/user/dockerfiles/wp-content:/var/www/html/wp-content
