docker network create cg

-----------------------
docker run -d \
    -p 80:80 \
    --name nginx-proxy \
    --net cg \
    -v /var/run/docker.sock:/tmp/docker.sock \
    jwilder/nginx-proxy

or

version: "3"
services:
  nginx-proxy:
    image: jwilder/nginx-proxy
    container_name: nginx-proxy
    ports:
      - "80:80"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro

networks:
  default:
    external:
      name: cg
-----------------------
